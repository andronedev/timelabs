{{> dashboard_navbar}}

<div class="mt-5">

    <div class="card">
        <div class="card-content">
            <div class="content is-medium">
                Hey <b>{{user.name}}</b>, bienvenue sur votre dashboard !

                <div class="mt-4">
                    <span class="tag is-info is-medium">{{nbDevices}} appareils connectés</span>
                    <span class="tag is-success is-medium">{{nbImages}} images enregistrées</span>
                </div>

                <div class="mt-4">
                    {{!-- ajouter un appareil --}}
                    <a href="/dashboard/add" class="button is-primary is-medium">
                        <span class="icon">
                            <i class="fa fa-plus"></i>
                        </span>
                        <span>Ajouter un appareil</span>
                    </a>
                </div>
            </div>


        </div>
    </div>

    <div class="mt-3 p-5 columns is-flex is-justify-content-center">
        <div class="column box is-5 m-2">
            <h3 class="title is-3">Appareils</h3>
            {{#each devices}}
            <div class="card">
                <div class="card-content">
                    <div class="content is-medium">
                        <div class="columns">
                            <div class="column">
                                <h4 class="title is-4">{{name}}</h4>
                                <p>{{status}}</p>
                            </div>
                            <div class="column">
                                <a href="/dashboard/devices/{{id}}" class="button is-primary is-medium">
                                    <span class="icon">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                    <span>Voir</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="column box is-5 m-2">
            <h3 class="title is-3">Dernières images</h3>
            {{#each latestImages}}
            <div class="card">

                <div class="card-content">
                    <div class="content is-medium">
                        <a download="{{name}}" href="/dashboard/image/{{id}}">
                            <img src="/dashboard/image/{{id}}" class="image">
                        </a>

                    </div>
                    <footer class="card-footer">
                        <span class="card-footer-item">{{dateFormat updatedAt}}</span>
                        <a href="/dashboard/devices/{{deviceId}}" class="card-footer-item"> Voir l'appareil</a>
                    </footer>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>